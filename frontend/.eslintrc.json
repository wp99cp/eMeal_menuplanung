{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:@next/next/recommended", "plugin:storybook/recommended"],
  "settings": {
    "next": {
      "rootDir": "frontend/src/"
    }
  },
  "globals": {
    "React": "readonly",
    "JSX": "readonly"
  },
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-unused-vars": [
      1,
      {
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  },
  "ignorePatterns": ["src/util/generated/*"]
}
